@model ProView.Web.Areas.Home.Models.NewArithmeticModel

@{
    ViewBag.Title = "Arithmetic";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string action = (Model.Id == 0) ? "Thêm mới biểu thức" : "Sửa biểu thức";
}
<div class="row row-backlink">
    <div class="span10">
        <a class="back-link" href="@Model.HttpReferer"><i class=" icon-chevron-left"></i>Quay trở lại</a>
    </div>
</div>
<div class="row box-noborder" style="padding-top: 30px;">
    <div class="span4">
        <div style="margin: 30px 20px 40px 20px; padding: 20px 30px 0 20px; background: #f5f5f5; height: 300px;">
            @action
            <div class="row row-arithmetic">
                <form id="arithmetic-form" method="post" action="@Url.Action("Arithmetic")">
                    @Html.AntiForgeryToken()
                    <div class="unstyled">
                        @Html.TextBoxFor(m => m.ArithmeticOperation, new { placeholder = "Nhập chuỗi ký tự" })
                        @Html.ValidationMessageFor(m => m.ArithmeticOperation, string.Empty, new { @class = "invalid" })
                    </div>

                    <div class="unstyled">
                        <input type="submit" name="save" value="Lưu" class="btn" />
                        <a href="@Model.HttpReferer" class="btn">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
