@model ProView.Web.Areas.Home.Models.ArithmeticsModel
<div id="arithmetic" style="padding-left: 20px;">
    @Html.Pager(Model)
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Biểu thức</th>
                <th>Kết quả</th>
                <th>Ngày tạo</th>
                <th style="text-align:right;width:165px;"><a href="/Arithmetic" class="btn btn-small"><i class="icon-user"></i> &nbsp;Thêm mới biểu thức</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var arithmetic in Model.Items)
            {
                <tr data-id="@arithmetic.Id">
                    <td>@arithmetic.ArithmeticOperation</td>
                    <td>@arithmetic.Result</td>
                    <td>@arithmetic.CreateDate.ToShortDateString()</td>
                    <td>
                        <button name="delete" class="btn btn-danger btn-xs" type="button"><i class="icon-trash"></i> &nbsp;Xóa biểu thức</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Pager(Model)
</div>

